<aura:component
                implements="lightning:availableForFlowScreens"
                access="global"
                controller="JNApplicantFlowController"
                >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="applicantId" type="String" />
    <aura:attribute name="crifRatings" type="String[]" />
    <aura:attribute name="creditInfoRatings" type="String[]" />
    <aura:attribute name="judgementsFiled" type="String[]" />
    <aura:attribute name="lawsuitsorClaims" type="String[]" />
    <aura:attribute name="affiliationTypes" type="String[]" />
    <aura:attribute name="primaryRelationshipTiers" type="String[]" />
    <aura:attribute name="sanctionScreenings" type="String[]" />
    <aura:attribute name="creditHistory24Months" type="String[]" />
    <aura:attribute name="assessmentApplicantNetWorth" type="String[]" />
    <aura:attribute name="bankruptLast7Years" type="String[]" />
    <aura:attribute name="KYCCompliants" type="String[]" />
    <aura:attribute name="JNGroupEmployee" type="String[]" />
    <aura:attribute name="assessmentofStatements" type="String[]" />
    <aura:attribute name="assessmentofBusinesses" type="String[]" />
    <aura:attribute name="AssessmentofBusinessWorkingCapitas" type="String[]" />
    <aura:attribute
                    name="validate"
                    type="Aura.Action"
                    description="Custom validation function to run when the flow is navigated to the next screen. 
                                 The function must evaluate the component and return values for isValid and errorMessage."
                    />
    
    <aura:attribute
                    name="applicant"
                    type="Applicant__c"
                    default="{'sobjectType':'Applicant__c'}"
                    />
    
    <lightning:accordion aura:id="accordion">
        <lightning:accordionSection
                                    name="credit_bureau_reporting"
                                    label="Credit bureau reporting financial and legal assessment"
                                    >
            <lightning:layout
                              multipleRows="true"
                              horizontalAlign="space"
                              verticalAlign="center"
                              >
                <lightning:layoutItem
                                      flexibility="no-flex"
                                      size="12"
                                      smallDeviceSize="6"
                                      mediumDeviceSize="6"
                                      largeDeviceSize="6"
                                      alignmentBump="right"
                                      padding="around-small"
                                      >
                    <lightning:select
                                      label="CRIF Rating"
                                      required="true"
                                      aura:id="validation"
                                      onchange="{!c.getCRIFRating}"
                                      value="{!v.applicant.CRIF_Rating__c}"
                                      >
                        <aura:iteration items="{!v.crifRatings}" var="item">
                            <option value="{!item}">{!item}</option>
                        </aura:iteration>
                    </lightning:select>
                </lightning:layoutItem>
                
                <!-- credit info rating -->
                <lightning:layoutItem
                                      flexibility="no-flex"
                                      size="12"
                                      smallDeviceSize="6"
                                      mediumDeviceSize="6"
                                      largeDeviceSize="6"
                                      alignmentBump="right"
                                      padding="around-small"
                                      >
                    <lightning:select
                                      label="Credit Info Rating"
                                      required="true"
                                      aura:id="validation"
                                      onchange="{!c.getCreditInfoRating}"
                                      value="{!v.applicant.CreditInfo_Rating__c}"
                                      >
                        <aura:iteration items="{!v.creditInfoRatings}" var="item">
                            <option value="{!item}">{!item}</option>
                        </aura:iteration>
                    </lightning:select>
                </lightning:layoutItem>
                
                <!-- Overall Credit bureau rating -->
                <lightning:layoutItem
                                      flexibility="no-flex"
                                      size="12"
                                      smallDeviceSize="6"
                                      mediumDeviceSize="6"
                                      largeDeviceSize="6"
                                      alignmentBump="right"
                                      padding="around-small"
                                      >
                    <lightning:input
                                     type="text"
                                     label="Overall Credit bureau rating"
                                     value="{!v.applicant.Overall_Credit_Bureau_Rating__c}"
                                     readonly="true"
                                     />
                </lightning:layoutItem>
            </lightning:layout>
        </lightning:accordionSection>
        <lightning:accordionSection
                                    name="financial_legal_assessment"
                                    label="Financial and Legal Assessment"
                                    >
                        <lightning:layout
                              multipleRows="true"
                              horizontalAlign="space"
                              verticalAlign="center"
                              >
            
            </lightning:layout>
        </lightning:accordionSection>
        <lightning:accordionSection name="jn_bank_details" label="JN bank details">
        </lightning:accordionSection>
    </lightning:accordion>
</aura:component>