<aura:component>
    <aura:attribute name="policyLimit" type="Decimal" />
    <aura:attribute name="priorProposedCredit" type="Decimal" />
    <aura:attribute name="afterProposedCredit" type="Decimal" />

    <fieldset class="slds-box slds-theme_default slds-p-top_medium">
        <legend class="slds-text-heading_medium slds-p-top_small">Total Debt Service Ratio</legend>
        <lightning:layout multipleRows="true">
        <lightning:layoutItem size="12" mediumDeviceSize="4" padding="horizontal-small">
            <lightning:input type="number" label="Policy Limit" value="{!v.policyLimit}" name="Market" formatter="percent" required="true" readonly="true"/>
        </lightning:layoutItem>
        <lightning:layoutItem size="12" mediumDeviceSize="4" padding="horizontal-small">
            <lightning:input type="number" label="Prior to Proposed Credit(s)" value="{!v.priorProposedCredit}" name="Market" formatter="percent" required="true" readonly="true"/>
        </lightning:layoutItem>
        <lightning:layoutItem size="12" mediumDeviceSize="4" padding="horizontal-small">
            <lightning:input type="number" label="After Proposed Credit(s)" value="{!v.afterProposedCredit}" name="Market" formatter="percent" required="true" readonly="true"/>
        </lightning:layoutItem>
    </lightning:layout>
    </fieldset>
</aura:component>	
