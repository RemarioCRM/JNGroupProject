<aura:component>
  <aura:attribute name="ParentContainer" type="Map" default="{}" />
  <aura:attribute name="RequestedDetailsContainer" type="Map" default="{}" />
  <aura:attribute name="productPrice" type="Decimal" />
  <aura:attribute name="loanPurpose" type="List" />
  <aura:attribute name="CreditRepaymentContainer" type="Map" default="{}" />
  <aura:attribute name="LoanSavingsContainer" type="Map" default="{}" />

  <aura:attribute name="jnDefaultConfigs" type="Map" />
  <aura:handler name="init" action="{!c.doInit}" value="{!this}" />
  <lightning:layoutItem size="12" mediumDeviceSize="6" padding="around-small">
    <div class="slds-form-element">
      <div class="slds-form-element__control">
        <lightning:select
          name="select1"
          label="Loan Purpose"
          required="true"
          onchange="{!c.onLoanPurposeChange}"
        >
          <option value="">select one...</option>
          <aura:iteration items="{!v.loanPurpose}" var="item">
            <option value="{!item}">{!item}</option>
          </aura:iteration>
        </lightning:select>
      </div>
    </div>
  </lightning:layoutItem>
  <c:RequestedDetailsLineItemComponent
    productPrice="{!v.productPrice}"
    ParentContainer="{!v.ParentContainer}"
  >
</c:RequestedDetailsLineItemComponent>

  <c:UnsecuredLoanFeatureLineItemComponent
    CreditRepaymentContainer="{!v.ParentContainer}"
    LoanSavingsContainer="{!v.LoanSavingsContainer}"
  ></c:UnsecuredLoanFeatureLineItemComponent>
  <c:CreditCalculationsLineItemComponent
    RequestedDetails="{!v.RequestedDetailsContainer}"
    CreditRepayment="{!v.ParentContainer}"
    LoanSavings="{!v.LoanSavingsContainer}"
    jnDefaultConfigs="{!v.jnDefaultConfigs}"
  ></c:CreditCalculationsLineItemComponent>
  <c:TotalDebtServiceRatioLineItemComponent></c:TotalDebtServiceRatioLineItemComponent>
</aura:component>
