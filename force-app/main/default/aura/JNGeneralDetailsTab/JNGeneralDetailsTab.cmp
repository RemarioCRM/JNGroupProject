<aura:component access="GLOBAL" controller="JNSiteController">
  <aura:handler name="init" action="{!c.doInit}" value="{!this}" />
  <aura:registerEvent type="c:JNComponentEvent" name="jnEvent" />
  <aura:attribute name="suffixes" type="String[]" />
  <aura:attribute name="genders" type="String[]" />
  <aura:attribute name="maritalStatuses" type="String[]" />
  <aura:attribute name="educationLevels" type="String[]" />
  <aura:attribute name="countries" type="String[]" />
  <aura:attribute name="titles" type="String[]" />
  <aura:attribute name="SiteLead" type="Map" />
  <aura:attribute name="maxdate" type="Date" />
        <aura:attribute name="loan_type" type="String" />

  <aura:method name="validateTabFields" action="{!c.validateTabFields}" access="public"/>
  <aura:method name="createDetails" action="{!c.createDetails}" access="public"/>

  <lightning:layout  >
    <lightning:layoutItem size="12">
      <!-- first row -->
      <div class="slds-grid slds-gutters">
        <!-- Title -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:select
            name="title"
            label="Title"
            onchange="{!c.getTitle}"
            required="false"
            aura:id="validation"
          >
            <option value="">select one...</option>
            <aura:iteration items="{!v.titles}" var="item">
              <option value="{!item}">{!item}</option>
            </aura:iteration>
          </lightning:select>
        </div>
        <!-- First Name -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:input
            name="first_name"
            label="First Name"
            required="true"
            value="{!v.SiteLead.FirstName }"
            aura:id="validation"
            readonly="{!v.SiteLead.Id}"
          />
        </div>
        <!-- Middle Name -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:input
            name="middle_name"
            label="Middle Name"
            required="false"
            value="{!v.SiteLead.MiddleName }"
            aura:id="validation"
            readonly="{!v.SiteLead.Id}"
          />
        </div>
        <!-- Last Name -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:input
            name="last_name"
            label="Last Name"
            required="true"
            value="{!v.SiteLead.LastName }"
            aura:id="validation"
            readonly="{!v.SiteLead.Id}"
          />
        </div>
      </div>
      <!-- second row -->
      <div class="slds-grid slds-gutters">
        <!-- Suffix -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:select
            name="suffix"
            label="Suffix"
            onchange="{!c.getSuffix}"
            required="false"
            aura:id="validation"
          >
            <option value="">select one...</option>
            <aura:iteration items="{!v.suffixes}" var="item">
              <option value="{!item}">{!item}</option>
            </aura:iteration>
          </lightning:select>
        </div>
        <!-- Gender -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:select
            name="gender"
            label="Gender"
            onchange="{!c.getGender}"
            required="true"
            aura:id="validation"
          >
            <option value="">select one...</option>
            <aura:iteration items="{!v.genders}" var="item">
              <option value="{!item}">{!item}</option>
            </aura:iteration>
          </lightning:select></div
        >
        <!-- Marital Status -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:select
            name="marital_status"
            label="Marital Status"
            required="true"
            onchange="{!c.getMaritalStatus}"
            aura:id="validation"
          >
            <option value="">select one...</option>
            <aura:iteration items="{!v.maritalStatuses}" var="item">
              <option value="{!item}">{!item}</option>
            </aura:iteration>
          </lightning:select></div
        >
        <!-- Date of Birth -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:input
            type="date"
            name="date_of_birth"
            label="Date of Birth"
            max="{!v.maxdate}"
            required="true"
            value="{!v.SiteLead.Date_of_Birth__c }"
            aura:id="validation"
          />
        </div>
      </div>

      <!-- third row -->
      <div class="slds-grid slds-gutters">
        <!-- Place of Birth -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:input
            name="place_of_birth"
            label="Place of Birth"
           
            required="true"
            value="{!v.SiteLead.Place_of_Birth__c }"
            aura:id="validation"
          />
        </div>
        <!-- Mother's Maiden Name -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:input
            name="maiden_name"
            label="Mother's Maiden Name"
            required="true"
            value="{!v.SiteLead.Mother_s_Maiden_Name__c}"
            aura:id="validation"
          />
        </div>
        <!-- Number of Dependents (Adults)-->
        <div class="slds-col slds-size_3-of-12">
          <lightning:input
            type="number"
            name="num_of_dependents_adults"
            label="Number of Dependents (Adults)"
            required="true"
            value="{!v.SiteLead.Number_of_Dependent_Adults__c}"
            aura:id="validation"
          />
        </div>
        <!-- Number of Dependents (Children)-->
        <div class="slds-col slds-size_3-of-12">
          <lightning:input
            type="number"
            name="num_of_dependents_children"
            label="Number of Dependents (Children)"
            required="true"
            value="{!v.SiteLead.Number_of_Dependent_Children__c}"
            aura:id="validation"
          />
        </div>
      </div>

      <!-- fourth row -->
      <div class="slds-grid slds-gutters">
        <!-- Country of Citizenship -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:select
            name="country_of_citizenship"
            label="Country of Citizenship"
            required="true"
            
            onchange="{!c.getCountryofCitizenship}"
            aura:id="validation"
          >
            <option value="Jamaica">Jamaica</option>
            <aura:iteration items="{!v.countries}" var="item">
              <option value="{!item}">{!item}</option>
            </aura:iteration>
          </lightning:select>
        </div>
        <!-- Country of Residence -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:select
            name="country_of_residence"
            label="Country of Residence"
            required="true"
            onchange="{!c.getCountryofResidence}"
            aura:id="validation"
          >
          <option value="Jamaica">Jamaica</option>
            <aura:iteration items="{!v.countries}" var="item">
              <option value="{!item}">{!item}</option>
            </aura:iteration>
          </lightning:select></div
        >
        <!-- Highest Education Level -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:select
            name="highest_education_level"
            label="Highest Education Level"
            required="true"
            onchange="{!c.getEducationLevel}"
            aura:id="validation"
          >
            <option value="">select one...</option>
            <aura:iteration items="{!v.educationLevels}" var="item">
              <option value="{!item}">{!item}</option>
            </aura:iteration>
          </lightning:select></div
        >
        <!-- TRN Number -->
        <div class="slds-col slds-size_3-of-12">
          <lightning:input
            type="text"
            name="trn_number"
            label="TRN Number"
            required="true"
            minlength="9"
            messageWhenPatternMismatch="please enter a valid trn number"
            pattern="^[0-9]{3}[0-9]{3}[0-9]{3}$"
            value="{!v.SiteLead.Jamaican_Tax_Registration_Number__c}"
            aura:id="validation"
          />
        </div>
      </div>
    </lightning:layoutItem>
  </lightning:layout>
</aura:component>