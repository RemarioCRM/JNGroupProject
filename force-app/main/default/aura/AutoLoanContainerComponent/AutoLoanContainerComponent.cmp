<aura:component>
  <ltng:require scripts="{!$Resource.calculations}" />
  <aura:attribute name="productPrice" type="Decimal" />
  <aura:attribute name="oppId" type="Id" />
  <aura:attribute name="oppApplicants" type="List" />
  <aura:attribute name="jnDefaultConfigs" type="Map" />
  <aura:attribute
    name="ParentContainer"
    type="Map"
    default="{}"
    description="Auto Loan parent container"
  />

  <c:PersonalAutoLoanRequestLineItemComponent
    applicants="{!v.oppApplicants}"
    oppId="{!v.oppId}"
    productPrice="{!v.productPrice}"
    ParentContainer="{!v.ParentContainer}"
  >
  </c:PersonalAutoLoanRequestLineItemComponent>

  <c:AutoLoanFeaturesLineItemComponent ParentContainer="{!v.ParentContainer}">
  </c:AutoLoanFeaturesLineItemComponent>

  <c:AutoLoanCreditCalculationsLineComponent
    ParentContainer="{!v.ParentContainer}"
    jnDefaultConfigs="{!v.jnDefaultConfigs}"
  >
  </c:AutoLoanCreditCalculationsLineComponent>

  <c:TotalDebtServiceRatioLineItemComponent
    ParentContainer="{!v.ParentContainer}"
    jnDefaultConfigs="{!v.jnDefaultConfigs}"
  ></c:TotalDebtServiceRatioLineItemComponent>
</aura:component>
