<aura:component>
    <aura:attribute name="legalFees" type="Decimal" />
    <aura:attribute name="stampDuty" type="Decimal" />
    <aura:attribute name="unsecuredLoanFees" type="Decimal" />
    <aura:attribute name="processingFees" type="Decimal" />
    <aura:attribute name="jnCreditorLifePremium" type="Decimal" />
    <aura:attribute name="jngiMotorPremium" type="Decimal" />
    <aura:attribute name="nsippFees" type="Decimal" />
    <aura:attribute name="stampDutyAndAdminCharges" type="Decimal" />
    <aura:attribute name="payableInstallment" type="Decimal" />
    <aura:attribute name="totalClosingCosts" type="Decimal" />

    <lightning:layoutItem size="12">
        <lightning:layoutItem size="12">
            <h2 class="slds-section-title--divider">Closing Cost</h2>
        </lightning:layoutItem>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="Legal Fees(including GCT)" value="{!v.legalFees}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="Stamp Duty" value="{!v.stampDuty}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="Processing Fees (including GCT)" value="{!v.processingFees}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="JN Creditor Life Insurance Premium" value="{!v.jnCreditorLifePremium}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <!--Auto Loans Product Only-->
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="JNGI Motor Premium (1st Year)" value="{!v.jngiMotorPremium}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="NSIPP Registration Fees" value="{!v.nsippFees}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <!--***********************-->
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="Assignment Fee" value="{!v.assignmentFee}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="Estimated Stamp Duty &amp; Admin Charges" value="{!v.stampDutyAndAdminCharges}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="1st Month's Installment Payable" value="{!v.payableInstallment}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="Total Closing Costs" value="{!v.totalClosingCosts}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="Total Closing Costs Financed By JN" value="{!v.totalClosingCostsJNFinanced}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>
            <lightning:layoutItem size="6" padding="around-small">
                <lightning:input type="number" label="Total Closing Costs Payable by Applicant" value="{!v.totalClosingCostsApplicantPayable}" name="number" formatter="currency" required="true" readonly="true"/>
            </lightning:layoutItem>

</aura:component>	
