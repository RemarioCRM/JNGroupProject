<aura:component
  implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId"
>
  <lightning:card>
    <c:AssetsVerificationLineComponent></c:AssetsVerificationLineComponent>
    <c:LiabilitiesVerificationLineComponent></c:LiabilitiesVerificationLineComponent>
    <c:MonthlyIncomeVerificationLineComponent></c:MonthlyIncomeVerificationLineComponent>
    <c:MonthlyExpensesVerificationLineComponent></c:MonthlyExpensesVerificationLineComponent>
    <c:NetWorthVerificationLineComponent></c:NetWorthVerificationLineComponent>
    <c:DebtConsolidationVerificationLineComponent></c:DebtConsolidationVerificationLineComponent>
