      <lightning:layoutItem size="12" mediumDeviceSize="4">
        <div class="slds-align_absolute-center slds-var-m-top_large">
          <lightning:button
            label="Check All"
            variant="brand-outline"
            title="Check All"
          />
        </div>
      </lightning:layoutItem>
      <lightning:layoutItem size="12" mediumDeviceSize="4">
        <div class="slds-align_absolute-center slds-var-m-top_large">
          <lightning:button label="Save" variant="brand" title="Save Details" />
        </div>
      </lightning:layoutItem>
      <lightning:layoutItem size="12" mediumDeviceSize="4">
        <div class="slds-align_absolute-center slds-var-m-top_large">
          <lightning:button
            label="Verify"
            variant="brand"
            title="Verify Details"
          />
        </div>
      </lightning:layoutItem>
    </lightning:layout>
  </lightning:card>
</aura:component>
