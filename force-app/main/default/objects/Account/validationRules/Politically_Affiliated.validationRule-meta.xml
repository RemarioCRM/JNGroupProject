<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Politically_Affiliated</fullName>
    <active>false</active>
    <errorConditionFormula>AND (Political_Exposure__pc = True,

OR 
(ISBLANK(Political_Affiliation_First_Name__pc),
 ISBLANK(Political_Affiliation_Last_Name__pc),
ISBLANK( Political_Affiliation_Role__pc ),
  ISBLANK(TEXT(Political_Affiliation_Relationship__pc))
))</errorConditionFormula>
    <errorMessage>Please add details of your political affiliation</errorMessage>
</ValidationRule>
