<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>uncheck_escalate_to_tier_2</fullName>
    <active>true</active>
    <errorConditionFormula>And(
ISCHANGED(Escalate_to_Tier2__c) , 
PRIORVALUE( Escalate_to_Tier2__c) = True 

)</errorConditionFormula>
    <errorDisplayField>Escalate_to_Tier2__c</errorDisplayField>
    <errorMessage>You cannot uncheck escalate to tier 2 after you send it to them.</errorMessage>
</ValidationRule>
