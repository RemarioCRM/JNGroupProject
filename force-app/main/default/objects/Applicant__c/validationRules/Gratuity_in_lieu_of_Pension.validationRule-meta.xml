<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Gratuity_in_lieu_of_Pension</fullName>
    <active>false</active>
    <errorConditionFormula>AND(INCLUDES(Applicable_sources_of_income__c , &quot;Salary&quot;), OR(Gratuity_in_lieu_of_Pension__c &lt;1,ISBLANK(Gratuity_in_lieu_of_Pension__c)))</errorConditionFormula>
    <errorMessage>Gratuity in lieu of Pension  is cannot be blank</errorMessage>
</ValidationRule>
